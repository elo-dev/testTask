{
  "compilerOptions": {
    "outDir": "built",
    "baseUrl": "src",
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "module": "es6",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "preserveConstEnums": true
  },
  "include": ["src/**/*", "./index.d.ts"],
  "exclude": ["node_modules", "babel.config.js", "postcss.config.js"]
}
